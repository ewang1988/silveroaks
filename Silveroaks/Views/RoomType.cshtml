@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<RoomType>

@{
    Layout = "Master.cshtml";
    var room = Model.Content;
}

<main class="container">

    <section class="row">
        @{
            Html.RenderPartial("BreadCrumbs", Model);
        }
        <div id="myCarousel" class="carousel slide col-md-8" data-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < room.RoomPictures.Count(); i++)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img class="img-fluid" src="@room.RoomPictures.ElementAt(i).Url" alt="Slide @(i + 1)">
                        </div>
                        continue;
                    }
                    <div class="carousel-item">
                        <img class="img-fluid" src="@room.RoomPictures.ElementAt(i).Url" alt="Slide @(i + 1)">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="col-md-4">
            <h1 class="my-3">@room.Name</h1>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae. Sed dui lorem, adipiscing in adipiscing et, interdum nec metus. Mauris ultricies, justo eu convallis placerat, felis enim.</p>
            <h3 class="my-3">Project Details</h3>
            <ul>
                @foreach (var feature in room.Children)
                {
                    <li>@feature.Name</li>
                }
            </ul>
            <a href="#" class="btn btn-lg btn-primary">Book Now</a>
        </div>
    </section>

    <h3 class="my-4">Other Rooms</h3>
    <section class="row">
        @foreach (var item in room.Ancestor<Accommodation>().Children)
        {
            var otherRoom = item as RoomType;
            <div class="col-md-4 col-sm-6 mb-4">
                <a href="@otherRoom.Url">
                    <img class="img-fluid" src="@otherRoom.ThumbnailPic.Url" alt="@otherRoom.Name">
                </a>
            </div>
        }
    </section>
</main>