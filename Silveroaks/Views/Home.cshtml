@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<Home>
@{
    Layout = "Master.cshtml";
    var home = Model.Content;
}

<header class="masthead text-center text-white d-flex">
    <div class="container my-auto">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <h1 class="text-uppercase">
                    <strong>@home.HeaderText</strong>
                </h1>
                <hr>
            </div>
            <div class="col-lg-8 mx-auto">
                <p class="mb-5">@home.ShortDescription</p>
                <a class="btn btn-primary btn-xl" href="#">@home.CtaButton1</a>
                <a class="btn btn-light btn-xl js-scroll-trigger" href="#about">@home.CtaButton2</a>
            </div>
        </div>
    </div>
</header>

<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">@home.AboutUsHeader</h2>
                <hr class="my-4">
                <p class="text-muted mb-4">@home.AboutUsDescription</p>
                <a class="btn btn-primary btn-xl js-scroll-trigger" href="#our-rooms">@home.AboutUsCtaButton</a>
            </div>
        </div>
    </div>
</section>

<section id="our-rooms" class="bg-primary">
    <div class="container">
        <div class="row">
            @foreach (RoomType room in home.HomePageFeaturedRooms)
            {
                <div class="col-lg-4 mb-4">
                    <div class="card h-100">
                        <h4 class="card-header">@room.Name</h4>
                        <div>
                            <a href="@room.Url">
                                <img src="@room.ThumbnailPic.Url" class="img-fluid" alt="@room.Name" />
                            </a>
                        </div>
                        <div class="card-footer">
                            <a href="@room.Url" class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">@home.MainAmenitiesHeader</h2>
                <hr class="my-4">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                    <i class="fas fa-4x fa-utensils text-primary mb-3"></i>
                    <h3 class="mb-3">@home.Amenity1Header</h3>
                    <p class="text-muted mb-0">@home.Amenity1</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                    <i class="fas fa-4x fa-bus text-primary mb-3"></i>
                    <h3 class="mb-3">@home.Amenity2Header</h3>
                    <p class="text-muted mb-0">@home.Amenity2</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                    <i class="fa fa-4x fa-wifi text-primary mb-3"></i>
                    <h3 class="mb-3">@home.Amenity3Header</h3>
                    <p class="text-muted mb-0">@home.Amenity3</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                    <i class="fa fa-4x fa-car text-primary mb-3"></i>
                    <h3 class="mb-3">@home.Amenity4Header</h3>
                    <p class="text-muted mb-0">@home.Amenity4</p>

                </div>
            </div>
        </div>
    </div>
</section>

<section id="contact" class="bg-primary">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center text-faded">
                <h2 class="section-heading text-white">@home.ContactDataHeader</h2>
                <hr class="light my-4">
                <p class="mb-5">@home.ContactDataDescription</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 ml-auto text-center text-white">
                <i class="fas fa-phone fa-3x mb-3"></i>
                <ul>
                    @foreach (var number in home.ContactDataPhoneNumber)
                    {
                        <li>
                            <a href="tel:@number" class="text-white">@number</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-lg-4 mr-auto text-center text-white">
                <i class="fas fa-envelope-open fa-3x mb-3"></i>
                <p>
                    <a href="mailto:@home.ContactDataEmail" class="text-white">@home.ContactDataEmail</a>
                </p>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <script>
        $(function () {
            $('header.masthead').css('background-image', 'url("@home.BackgroundImage.Url")');
        });
    </script>
}