@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<Home>
@{
    Layout = "Master.cshtml";
}

<header class="masthead text-center text-white d-flex">
    <div class="container my-auto">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <h1 class="text-uppercase">
                    <strong>@Model.Content.MotelName</strong>
                </h1>
                <hr>
            </div>
            <div class="col-lg-8 mx-auto">
                <p class="text-faded mb-5">@Model.Content.ShortDescription</p>
                <a class="btn btn-primary btn-xl js-scroll-trigger" href="#about">@Model.Content.CtaButton1</a>
                <a class="btn btn-light btn-xl" href="#about">@Model.Content.CtaButton2</a>

            </div>
        </div>
    </div>
</header>
<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">@Model.Content.AboutUsHeader</h2>
                <hr class="my-4">
                <p class="text-muted mb-4">@Model.Content.AboutUsDescription</p>
                <a class="btn btn-primary btn-xl js-scroll-trigger" href="#portfolio">@Model.Content.AboutUsCtaButton</a>
            </div>
        </div>
    </div>
</section>
@{
    Html.RenderPartial("RoomTypes");
}
<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">@Model.Content.MainAmenitiesHeader</h2>
                <hr class="my-4">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                    <i class="fas fa-4x fa-utensils text-primary mb-3"></i>
                    <h3 class="mb-3">@Model.Content.Amenity1Header</h3>
                    <p class="text-muted mb-0">@Model.Content.Amenity1</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                    <i class="fas fa-4x fa-bus text-primary mb-3"></i>
                    <h3 class="mb-3">@Model.Content.Amenity2Header</h3>
                    <p class="text-muted mb-0">@Model.Content.Amenity2</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                    <i class="fa fa-4x fa-wifi text-primary mb-3"></i>
                    <h3 class="mb-3">@Model.Content.Amenity3Header</h3>
                    <p class="text-muted mb-0">@Model.Content.Amenity3</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box mt-5 mx-auto">
                    <i class="fa fa-4x fa-car text-primary mb-3"></i>
                    <h3 class="mb-3">@Model.Content.Amenity4Header</h3>
                    <p class="text-muted mb-0">@Model.Content.Amenity4</p>

                </div>
            </div>
        </div>
    </div>
</section>

<section id="contact" class="bg-primary">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center text-faded">
                <h2 class="section-heading text-white">Let's Get In Touch!</h2>
                <hr class="my-4">
                <p class="mb-5">Ready to start your next project with us? That's great! Give us a call or send us an email and we will get back to you as soon as possible!</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 ml-auto text-center text-white">
                <i class="fas fa-phone fa-3x mb-3"></i>
                <p>123-456-6789</p>
            </div>
            <div class="col-lg-4 mr-auto text-center text-white">
                <i class="fas fa-envelope-open fa-3x mb-3"></i>
                <p>
                    <a href="mailto:your-email@your-domain.com" class="text-white">feedback@silveroaks.com</a>
                </p>
            </div>
        </div>
    </div>
</section>

