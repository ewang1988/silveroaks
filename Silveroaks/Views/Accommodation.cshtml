@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<Accommodation>
@{
    Layout = "Master.cshtml";
    var umbracoModel = Model.Content;
}

<main id="accommodation" class="container margin-top40">
    <h1 class="mt-4 mb-3">
        @umbracoModel.HeaderText
    </h1>
    <div class="row">
        @{
            Html.RenderPartial("BreadCrumbs", Model);
            var rooms = Model.Content.Children;
        }
        @foreach (RoomType room in rooms)
        {
            <div class="col-lg-4 col-sm-6 portfolio-item">
                <div class="card h-100">
                    <a href="@room.Url">
                        <img class="card-img-top" src="@room.ThumbnailPic.Url" alt="@room.Name">
                    </a>
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="@room.Url">@room.Name</a>
                        </h4>
                        <ul>
                            @foreach (var feature in room.RoomFeatures)
                            {
                                <li>@feature</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
