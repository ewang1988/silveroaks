@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<Accommodation>
@{
    Layout = "Master.cshtml";
}

<main class="container">
    <h1 class="mt-4 mb-3">
        Our Rooms
    </h1>
    <div class="row">
        @{
            Html.RenderPartial("BreadCrumbs", Model);
            var rooms = Model.Content.Children;
        }
        @foreach (var room in rooms)
        {
            var features = room.Children();
            var thumbnailNode = room.GetPropertyValue<int>("thumbnailPic");
            <div class="col-lg-4 col-sm-6 portfolio-item">
                <div class="card h-100">
                    <a href="@room.Url"><img class="card-img-top" src="@Umbraco.TypedMedia(thumbnailNode).Url" alt=""></a>
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="@room.Url">@room.Name</a>
                        </h4>
                        <ul>
                            @foreach (var feature in features)
                            {
                                <li>@feature.Name</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- Pagination -->
    <ul class="pagination justify-content-center">
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">2</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">3</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</main>